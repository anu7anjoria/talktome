<%- include('./header-side-footer/dash') -%>
<div class="content"
<article class="card card-cascade wider">
        <section class="view gradient-card-header aqua-gradient overlay d-flex align-items-center justify-content-center pt-2 pb-2">
            <img src="./img/teachers/ross-geller.jpg" class="rounded-circle" alt="Profile picture" height="60px" width="60px">
            <h4 class="card-header">Select A Portal</h4>
          </section>
          
          <section class="card-body">
            <section class="card-deck">
              <section class="card">
                <section class="view overlay p-3 text-center">
                  <h6 class="deep-orange-text darken-4">
                    <i class="fas fa-file-powerpoint"></i>
                    Feedback
                  </h6>
                  <p class="card-text">Have Dooubts? Want to ask a question. Click here</p>
                  <a class="btn btn-deep-orange" role="button" href="/student/feedback">Feedback</a>
                </section>
              </section>
              <section class="card">
                <section class="view overlay p-3 text-center">
                  <h6 class="darken-4">
                    <i class="fas fa-book"></i>
                    Counselling
                  </h6>
                  <p class="card-text">Share personal problems and be stress free!</p>
                  <a class="btn btn-elegant" role="button" href="/student/counselling">Counselling</a>
                </section>
              </section>
              <section class="card">
                <section class="view overlay p-3 text-center">
                  <h6 class="indigo-text darken-4">
                    <i class="fas fa-sticky-note"></i>
                    Ideation
                  </h6>
                  <p class="card-text">Came up with an idea! Share and help!</p>
                  <a class="btn btn-indigo" role="button" href="/student/ideation">Ideation</a>
                </section>
              </section>
            </section>
          </section>
        </article>

        <!-- Card -->
        <article class="card card-cascade narrower">
          <!-- Card heading -->
          <section class="view gradient-card-header purple-gradient narrower py-3 mb-4 d-flex justify-content-center align-items-center">
            <span class="white-text mx-3">Questions Answered</span>
          </section>

          <!-- Card content -->
          <section class="px-4">
            <!-- Table -->
            <section class="table-wrapper">
              <table class="table table-hover mb-0">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Answer</th>
                    <th>Date</th>
                  </tr>
                </thead>

            <tbody>     
      
                    <% for(var i=0; i < data.length; i++) { %>
                    <tr>
                        <td><%= data[i].title %></td>
                         <td><%= data[i].body %></td>
                        <td><%= data[i].date %></td>
                    </tr>
            <% } %>
            </tbody>
            </table>
            </section>
            </section>
        </article>
    </div>

<%- include('./header-side-footer/footer') -%>